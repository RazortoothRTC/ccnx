<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.rtc.ccnx.droid"
      android:versionCode="184"
	  android:versionName="0.8.0.1">

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:name=".Controller"
                  android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </activity>
        
        <service android:name=".ccnd.CcndService">
	        <intent-filter>
	        	<action android:name="org.ccnx.android.service.ccnd.SERVICE"></action>
	        </intent-filter>    
		</service>
		
		<service android:name=".repo.RepoService">
	        <intent-filter>
	        	<action android:name="org.ccnx.android.service.repo.SERVICE"></action>
	        </intent-filter>    
		</service>

    </application>

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-sdk android:minSdkVersion="7" />
	<uses-sdk android:targetSdkVersion="14" />
</manifest> 
